<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header' )%>
  <title>New Book</title>
</head>

<body>

  <%- include ('partials/navigation') %>
  <div class="container p-4">
    <form method="POST" target="/new-entry" class="card card-body">

      <div class="form-group">
        <label for="nombre">nombre</label>
        <input name="nombre" type="text" class="form-control" placeholder="Nombre" autofocus required>
      </div>

      <div class="form-group">
        <label for="title">edad</label>
        <input name="edad" type="number" class="form-control" placeholder="edad" autofocus required>
      </div>
      
      <div class="form-group">
        <label for="image">Sexo</label>
        <input type="text" name="sexo" class="form-control" placeholder="Sexo/Gender" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="altura" rows="2" required>
        </textarea>
      </div>

      <div class="form-group">
        <input type="submit" value="Post Entry" class="btn btn-primary">
      </div>
    </form>

  </div>

  <%- include ('partials/footer')%>
</body>

</html>